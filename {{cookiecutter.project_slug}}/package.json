{
  "name": "{{cookiecutter.project_slug}}",
  "version": "{{cookiecutter.first_version}}",
  "description": "{{cookiecutter.project_short_description}}",
  "type": "module",
{% if cookiecutter._use_nextjs == "y" -%}
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test",
{% if cookiecutter.use_docker == "y" -%}
    "docker:dev": "docker-compose up",
    "docker:build": "docker build -f docker/Dockerfile -t {{cookiecutter.project_slug}}:latest .",
{% endif -%}
    "clean": "rm -rf .next out",
    "analyze": "ANALYZE=true npm run build"
  },
{% else -%}
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test",
{% if cookiecutter.use_docker == "y" -%}
    "docker:dev": "docker-compose up",
    "docker:build": "docker build -f docker/Dockerfile -t {{cookiecutter.project_slug}}:latest .",
{% endif -%}
    "clean": "rm -rf dist",
    "analyze": "npx vite-bundle-analyzer"
  },
{% endif -%}
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"{% if cookiecutter._use_nextjs == "y" -%},
    "next": "^15.5.3"{% else -%},
    "react-router-dom": "^6.20.0"{% endif -%}{% if cookiecutter.ui_library == "shadcn-ui" -%},
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "lucide-react": "^0.294.0"{% elif cookiecutter.ui_library == "chakra-ui" -%},
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.5"{% elif cookiecutter.ui_library == "material-ui" -%},
    "@mui/material": "^5.14.18",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0"{% elif cookiecutter.ui_library == "daisyui" -%}{% elif cookiecutter.ui_library == "flowbite" -%},
    "flowbite": "^2.2.0",
    "flowbite-react": "^0.7.0"{% endif -%}{% if cookiecutter.state_management == "redux-toolkit" -%},
    "@reduxjs/toolkit": "^1.9.7",
    "react-redux": "^8.1.3"{% elif cookiecutter.state_management == "zustand" -%},
    "zustand": "^4.4.6"{% endif -%}{% if cookiecutter.use_i18n == "y" -%},
    "react-i18next": "^13.5.0",
    "i18next": "^23.7.6",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2"{% endif -%}
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.3",
    "typescript": "^5.9.2",
{% if cookiecutter._use_nextjs == "y" -%}
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.5.3",
{% else -%}
    "@vitejs/plugin-react": "^5.0.2",
    "vite": "^5.4.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
{% endif -%}
{% if cookiecutter.use_a11y == "y" -%}
    "eslint-plugin-jsx-a11y": "^6.10.2",
{% endif -%}
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.5.3",
    "eslint-config-prettier": "^10.1.0",
    "tailwindcss": "^3.4.17",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.21"{% if cookiecutter.ui_library == "daisyui" -%},
    "daisyui": "^4.4.19"{% endif -%},
    "vitest": "^3.2.4",
    "jsdom": "^27.0.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@playwright/test": "^1.55.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">={{cookiecutter.node_version}}"
  },
  "author": {
    "name": "{{cookiecutter.full_name}}",
    "email": "{{cookiecutter.email}}"
  },
  "license": "{{cookiecutter.license}}",
  "keywords": [
    "react",
    "typescript",
{% if cookiecutter._use_nextjs == "y" -%}
    "nextjs",
    "ssr",
{% else -%}
    "vite",
    "spa",
{% endif -%}
    "tailwindcss"{% if cookiecutter.ui_library != "none" -%},
    "{{cookiecutter.ui_library}}"{% endif -%}{% if cookiecutter.state_management != "none" -%},
    "{{cookiecutter.state_management}}"{% endif -%}
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Real-AI-Engineering/cookiecutter-react-claude.git"
  },
  "bugs": {
    "url": "https://github.com/Real-AI-Engineering/cookiecutter-react-claude/issues"
  },
  "homepage": "https://github.com/Real-AI-Engineering/cookiecutter-react-claude#readme"
}
