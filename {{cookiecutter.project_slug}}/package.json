{
  "name": "{{cookiecutter.project_slug}}",
  "version": "{{cookiecutter.first_version}}",
  "description": "{{cookiecutter.project_short_description}}",
  "type": "module",
{% if cookiecutter._use_nextjs == "y" -%}
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test",
{% if cookiecutter.use_docker == "y" -%}
    "docker:dev": "docker-compose up",
    "docker:build": "docker build -f docker/Dockerfile -t {{cookiecutter.project_slug}}:latest .",
{% endif -%}
    "clean": "rm -rf .next out",
    "analyze": "ANALYZE=true npm run build"
  },
{% else -%}
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test",
{% if cookiecutter.use_docker == "y" -%}
    "docker:dev": "docker-compose up",
    "docker:build": "docker build -f docker/Dockerfile -t {{cookiecutter.project_slug}}:latest .",
{% endif -%}
    "clean": "rm -rf dist",
    "analyze": "npx vite-bundle-analyzer"
  },
{% endif -%}
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"{% if cookiecutter._use_nextjs == "y" -%},
    "next": "^14.0.0"{% else -%},
    "react-router-dom": "^6.20.0"{% endif -%}{% if cookiecutter.ui_library == "shadcn-ui" -%},
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "lucide-react": "^0.294.0"{% elif cookiecutter.ui_library == "chakra-ui" -%},
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.5"{% elif cookiecutter.ui_library == "material-ui" -%},
    "@mui/material": "^5.14.18",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0"{% elif cookiecutter.ui_library == "daisyui" -%}{% elif cookiecutter.ui_library == "flowbite" -%},
    "flowbite": "^2.2.0",
    "flowbite-react": "^0.7.0"{% endif -%}{% if cookiecutter.state_management == "redux-toolkit" -%},
    "@reduxjs/toolkit": "^1.9.7",
    "react-redux": "^8.1.3"{% elif cookiecutter.state_management == "zustand" -%},
    "zustand": "^4.4.6"{% endif -%}{% if cookiecutter.use_i18n == "y" -%},
    "react-i18next": "^13.5.0",
    "i18next": "^23.7.6",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2"{% endif -%}
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "typescript": "^5.2.2",
{% if cookiecutter._use_nextjs == "y" -%}
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
{% else -%}
    "@vitejs/plugin-react": "^4.1.1",
    "vite": "^5.0.0",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
{% endif -%}
{% if cookiecutter.use_a11y == "y" -%}
    "eslint-plugin-jsx-a11y": "^6.8.0",
{% endif -%}
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "tailwindcss": "^3.3.6",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"{% if cookiecutter.ui_library == "daisyui" -%},
    "daisyui": "^4.4.19"{% endif -%},
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">={{cookiecutter.node_version}}"
  },
  "author": {
    "name": "{{cookiecutter.full_name}}",
    "email": "{{cookiecutter.email}}"
  },
  "license": "{{cookiecutter.license}}",
  "keywords": [
    "react",
    "typescript",
{% if cookiecutter._use_nextjs == "y" -%}
    "nextjs",
    "ssr",
{% else -%}
    "vite",
    "spa",
{% endif -%}
    "tailwindcss"{% if cookiecutter.ui_library != "none" -%},
    "{{cookiecutter.ui_library}}"{% endif -%}{% if cookiecutter.state_management != "none" -%},
    "{{cookiecutter.state_management}}"{% endif -%}
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/{{cookiecutter.github_username}}/{{cookiecutter.project_slug}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{cookiecutter.github_username}}/{{cookiecutter.project_slug}}/issues"
  },
  "homepage": "https://github.com/{{cookiecutter.github_username}}/{{cookiecutter.project_slug}}#readme"
}